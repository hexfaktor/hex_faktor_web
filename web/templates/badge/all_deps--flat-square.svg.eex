    <stop offset=".5" stop-color="#46b01e" />
    <stop offset=".9" stop-color="#46b01e" />
    <stop offset="1" stop-color="#46b01e" />
  </linearGradient>
  <linearGradient id="gradB" x2="0" y2="100%">
    <stop offset="0" stop-color="#88cc33" />
    <stop offset=".1" stop-color="#88cc33" />
    <stop offset=".5" stop-color="#88cc33" />
    <stop offset=".9" stop-color="#88cc33" />
    <stop offset="1" stop-color="#88cc33" />
  </linearGradient>
  <linearGradient id="gradC" x2="0" y2="100%">
    <stop offset="0" stop-color="#FFE100" />
    <stop offset=".1" stop-color="#FFE100" />
    <stop offset=".5" stop-color="#FFE100" />
    <stop offset=".9" stop-color="#FFE100" />
    <stop offset="1" stop-color="#FFE100" />
